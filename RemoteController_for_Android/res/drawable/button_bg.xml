<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false" android:state_selected="false"><layer-list>
            <item android:drawable="@drawable/shadow"/>
            <item android:bottom="2dp" android:drawable="@drawable/roundedrect_normal"/>
        </layer-list></item>
    <item android:state_pressed="true"><layer-list>
            <item android:drawable="@drawable/shadow"/>
            <item android:bottom="2dp" android:drawable="@drawable/roundedrect_pressed"/>
        </layer-list></item>
    <item android:state_pressed="false" android:state_selected="true"><layer-list>
            <item android:drawable="@drawable/shadow"/>
            <item android:bottom="2dp" android:drawable="@drawable/roundedrect_pressed"/>
        </layer-list></item>

</selector>